<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Phoenix.TextAppearance.Bold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/arvo_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Phoenix.TextAppearance.Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/arvo_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
    </style>

    <!-- Menu Style -->
    <style name="Phoenix.Menu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Phoenix.TextInputLayout.Rounded</item>
        <item name="boxStrokeColor">@color/outline_box_color</item>
    </style>

    <style name="ShapeAppearanceOverlay.Phoenix.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Phoenix.TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Phoenix.TextInputLayout.Rounded</item>
        <item name="android:textColorHint">@color/color_545454</item>
        <item name="boxStrokeColor">@color/outline_box_color</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintTextColor">@color/purple_200</item>
        <item name="android:textAppearance">@style/Phoenix.TextAppearance</item>
        <item name="hintTextAppearance">@style/Phoenix.TextAppearance</item>
    </style>

    <style name="Phoenix.TextInputLayout.ExposedDropdownMenu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Phoenix.TextInputLayout.Rounded</item>
        <item name="android:textColorHint">@color/color_545454</item>
        <item name="boxStrokeColor">@color/outline_box_color</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintTextColor">@color/purple_200</item>
        <item name="android:textAppearance">@style/Phoenix.TextAppearance</item>
        <item name="hintTextAppearance">@style/Phoenix.TextAppearance</item>
    </style>

    <style name="Phoenix.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/arvo_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Phoenix.TextAppearance.TextBody1" parent="Phoenix.TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

</resources>